@{
    ViewData["Title"] = "Начало";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            🚕 Taxi Management System
        </h1>

        <p class="lead text-muted mt-3">
            Уеб приложение на ASP.NET Core MVC за управление на
            <strong>шофьори</strong>, <strong>автомобили</strong> и
            <strong>таксиметрови услуги</strong>.
        </p>
    </div>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="text-center mb-4">

            <div class="d-flex justify-content-center gap-3 flex-wrap">

                <a class="btn btn-primary btn-lg px-4"
                   asp-controller="Drivers"
                   asp-action="Details">
                    👤 Шофьор
                </a>

                <a class="btn btn-success btn-lg px-4"
                   asp-controller="Cars"
                   asp-action="All">
                    🚗 Автомобили
                </a>

                <a class="btn btn-warning btn-lg px-4"
                   asp-controller="TaxServices"
                   asp-action="All">
                    💰 Услуги
                </a>

            </div>

            <div class="alert alert-info mt-4 shadow-sm">
                Влезли сте като <strong>@User.Identity!.Name</strong>.
            </div>

        </div>
    }
    else
    {
        <div class="text-center">

            <div class="d-flex justify-content-center gap-3">

                <a class="btn btn-primary btn-lg px-4"
                   asp-area="Identity"
                   asp-page="/Account/Register">
                    Регистрация
                </a>

                <a class="btn btn-outline-primary btn-lg px-4"
                   asp-area="Identity"
                   asp-page="/Account/Login">
                    Вход
                </a>

            </div>

            <div class="alert alert-warning mt-4 shadow-sm">
                За да добавяте коли и услуги, трябва да имате акаунт и да сте влезли в системата.
            </div>

        </div>
    }

</div>
