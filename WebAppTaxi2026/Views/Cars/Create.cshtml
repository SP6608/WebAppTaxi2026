@model CarCreateViewModel
@{
    ViewData["Title"] = "Добави автомобил";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">➕ Добави автомобил</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label">Марка</label>
                            <input name="Brand" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Регистрационен номер</label>
                            <input name="RegNumber" class="form-control" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Година</label>
                                <input name="Year" type="number" class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Брой места</label>
                                <input name="Places" type="number" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Начална такса</label>
                                <input name="InitialFee" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Цена на км</label>
                                <input name="PricePerKm" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Цена на минута</label>
                                <input name="PricePerMinute" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Drivers" asp-action="Details"
                               class="btn btn-outline-secondary">
                                Назад
                            </a>

                            <button type="submit" class="btn btn-success">
                                Запази
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
